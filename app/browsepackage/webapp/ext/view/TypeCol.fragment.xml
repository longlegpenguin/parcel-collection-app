<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <CustomListItem>
        <HBox>
            <core:Icon
                size="2rem"
                src="{type/icon}"
                class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
            />
            <VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
                <Label text="{type/name}" />
            </VBox>
        </HBox>
    </CustomListItem>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Edit Package"
        class="sapUiResponsiveContentPadding"
        beforeOpen=".onDialogBeforeOpen"
        afterClose=".onDialogAfterClose"
    >
        <content>
            <!-- <List
                id="idSomeList"
                headerText="List Example"
                items="{/Package}"
                visible="true"
            >
                <items>
                    <StandardListItem
                        title="{name}"
                        description="shabi"
                    />
                </items>
            </List> -->
            <f:Form
                id="idEditForm"
                editable="true"
                binding="/Package"
            >
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsXL="1"
                        columnsL="1"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement label="Recipient">
                                <f:fields>
                                    <Input
                                        value="{recipient}"
                                        id="idRecipientInput"
                                        required="true"
                                        tooltip="required"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="Type"
                                binding="/PackageType"
                            >
                                <f:fields>
                                    <Select
                                        id="idPackageTypeSelect"
                                        items="{/PackageType}"
                                        tooltip="required"
                                        selectedKey="{type_code}"
                                    >
                                        <core:Item
                                            key="{code}"
                                            text="{name}"
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="Delivery Company"
                                binding="/DeliveryCompany"
                            >
                                <f:fields>
                                    <Select
                                        id="idDeliveryCompanySelect"
                                        items="{/DeliveryCompany}"
                                        selectedKey="{deliveryCompany_ID}"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{name}"
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Comment">
                                <f:fields>
                                    <Input
                                        value="{comment}"
                                        id="idCommentInput"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Receptionist">
                                <f:fields>
                                    <Input
                                        value="{receptionist}"
                                        id="idReceptionistInput"
                                        editable="false"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="" visible="false">
                                <f:fields>
                                    <Input
                                        value="{status_code}"
                                        id="idStatusInput"
                                        editable="false"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <beginButton>
            <Button
                id="idSaveButton"
                text="Save"
                press=".onSaveButtonPress"
                type="Emphasized"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCloseButton"
                text="Close"
                press=".onCloseButtonPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

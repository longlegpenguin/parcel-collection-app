<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Edit Package"
        class="sapUiResponsiveContentPadding"
        beforeOpen=".onDialogBeforeOpen"
        afterClose=".onDialogAfterClose"
    >
        <content>
            <f:Form
                id="idEditForm"
                editable="true"
                binding="/Package"
            >
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsXL="1"
                        columnsL="1"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement
                                label="Recipient"
                                binding="/User"
                            >
                                <f:fields>
                                    <Select
                                        id="idUserSelect"
                                        items="{/User}"
                                        selectedKey="{recipient_ID}"
                                        required="true"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{firstName} {lastName} ({sapId})"
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="Type"
                                binding="/PackageType"
                            >
                                <f:fields>
                                    <Select
                                        id="idPackageTypeSelect"
                                        items="{/PackageType}"
                                        tooltip="required"
                                        selectedKey="{type_code}"
                                    >
                                        <core:Item
                                            key="{code}"
                                            text="{name}"
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="Delivery Company"
                                binding="/DeliveryCompany"
                            >
                                <f:fields>
                                    <Select
                                        id="idDeliveryCompanySelect"
                                        items="{/DeliveryCompany}"
                                        selectedKey="{deliveryCompany_ID}"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{name}"
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Comment">
                                <f:fields>
                                    <Input
                                        value="{comment}"
                                        id="idCommentInput"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                label="Receptionist"
                                binding="/Receptionist"
                            >
                                <f:fields>
                                    <Select
                                        id="idReceptionistSelect"
                                        items="{/Receptionist}"
                                        selectedKey="{receptionist_ID}"
                                        editable="false"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{user/diaplayName}"
                                        />
                                    </Select>
                                </f:fields>
                            </f:FormElement>

                            <f:FormElement
                                label=""
                                visible="false"
                            >
                                <f:fields>
                                    <Input
                                        value="{status_code}"
                                        id="idStatusInput"
                                        editable="false"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <beginButton>
            <Button
                id="idSaveButton"
                text="Done"
                press=".onSaveButtonPress"
                type="Emphasized"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="createStorageDialog"
        core:require="{handler:'packagehandling/app/storage/ext/handler/CreateStorageDialog'}"
        titleAlignment="Start"
        draggable="true"
        contentWidth="auto"
        title="{i18n>CreateBaseline}"
        showHeader="true"
        class="sapUiSizeCompact"
    >
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"
            />
            <form:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                columnsXL="1"
                columnsL="1"
                singleContainerFullSize="false"
            >
                <Label
                    text="{i18n>BaselineProfile}"
                    labelFor="baselineProfileId"
                />
                <Input
                    id="baselineProfileId"
                    editable="false"
                    value="{parts:[{path:'localDataModel>/createBaseline/data/baselineProfileName'},{path:'localDataModel>/createBaseline/data/baselineProfileId'}]}"
                    tooltip="{parts:[{path:'localDataModel>/createBaseline/data/baselineProfileName'},{path:'localDataModel>/createBaseline/data/baselineProfileId'}]}"
                >
                    <customData>
                        <core:CustomData
                            key=""
                            value="baselineProfileID"
                        />
                    </customData>
                </Input>
            </form:SimpleForm>
        </content>
        <beginButton>
            <Button
                id="createBaselineFooterBtn"
                text="{i18n>Create}"
                type="Emphasized"
                press=".onPressCreate"
            />
        </beginButton>
        <endButton>
            <Button
                id="cancelBtn"
                text="{i18n>Cancel}"
                press=".onPressCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

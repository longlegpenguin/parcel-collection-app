<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Create Slot"
        class="sapUiResponsiveContentPadding"
        beforeOpen=".onDialogBeforeOpen"
        afterClose=".onDialogAfterClose"
    >
        <content>
            <f:Form
                id="idstorageForm"
                editable="true"
                binding="/BuildingFloor"
            >
                <f:layout>
                    <f:ResponsiveGridLayout
                        labelSpanXL="3"
                        labelSpanL="3"
                        labelSpanM="3"
                        adjustLabelSpan="false"
                        emptySpanXL="4"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsXL="1"
                        columnsL="1"
                        singleContainerFullSize="false"
                    />
                </f:layout>
                <f:formContainers>
                    <f:FormContainer>
                        <f:formElements>
                            <f:FormElement
                                visible="false"
                                label="ID"
                            >
                                <f:fields>
                                    <Input
                                        value=""
                                        id="idIdInput"
                                        visible="false"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement
                                visible="false"
                                label="Status"
                            >
                                <f:fields>
                                    <Input
                                        value=""
                                        id="idStatisInput"
                                        visible="false"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement label="Name">
                                <f:fields>
                                    <Input
                                        value=""
                                        id="idNameInput"
                                        required="true"
                                        tooltip="required"
                                    />
                                </f:fields>
                            </f:FormElement>
                            <f:FormElement>
                                <f:fields>
                                    <CheckBox
                                        text="Available"
                                        selected="true"
                                        id="idAvailableCheckBox"
                                    />
                                </f:fields>
                            </f:FormElement>
                        </f:formElements>
                    </f:FormContainer>
                </f:formContainers>
            </f:Form>
        </content>
        <beginButton>
            <Button
                id="idSaveButton"
                text="Save"
                press=".onSaveButtonPress"
                type="Emphasized"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCloseButton"
                text="Close"
                press=".onCloseButtonPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title="Create Storage"
        class="sapUiResponsiveContentPadding"
        beforeOpen=".onBeforeOpen"
        afterClose=".onAfterClose"
    >            <Table
                id="storageList"
                items="{
                            path: '/Storage',
                            parameters: {
                                $$updateGroupId : 'storageGroup'
                            }
                        }"
            />
        <content>
            <Table
                id="peopleList"
                growing="true"
                growingThreshold="10"
                items="{
								path: '/People',
								parameters: {
									$count: true,
									$$updateGroupId : 'peopleGroup'
								}
							}"
            >
                <content>
                    <f:Form
                        id="storageForm"
                        editable="true"
                        binding="/Storage"
                    >
                        <f:layout>
                            <f:ResponsiveGridLayout
                                labelSpanXL="3"
                                labelSpanL="3"
                                labelSpanM="3"
                                labelSpanS="12"
                                adjustLabelSpan="false"
                                emptySpanXL="4"
                                emptySpanL="4"
                                emptySpanM="4"
                                emptySpanS="0"
                                columnsXL="1"
                                columnsL="1"
                                columnsM="1"
                                singleContainerFullSize="false"
                            />
                        </f:layout>
                        <f:formContainers>
                            <f:FormContainer>
                                <f:formElements>
                                    <f:FormElement label="Name">
                                        <f:fields>
                                            <Input
                                                value=""
                                                id="name"
                                                required="true"
                                                tooltip="required"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="Building Floor">
                                        <f:fields>
                                            <Input
                                                value=""
                                                id="bf"
                                                required="true"
                                                tooltip="required"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement label="Map">
                                        <f:fields>
                                            <Input
                                                value=""
                                                placeholder="http://"
                                                id="map"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                    <f:FormElement
                                        label="Location Instructions"
                                    >
                                        <f:fields>
                                            <Input
                                                value="Text"
                                                id="locIns"
                                            />
                                        </f:fields>
                                    </f:FormElement>
                                </f:formElements>
                            </f:FormContainer>
                        </f:formContainers>
                    </f:Form>
                </content>
                <beginButton>
                    <Button
                        id="create"
                        text="Create"
                        press=".onOk"
                        type="Emphasized"
                        enabled="true"
                    />
                </beginButton>
                <endButton>
                    <Button
                        id="cancel"
                        text="Close"
                        press=".onCancel"
                    />
                </endButton>
            </Table>
        </content>
    </Dialog>
</core:FragmentDefinition>

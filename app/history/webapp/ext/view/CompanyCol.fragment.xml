<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <FlexBox
        justifyContent="Start"
        alignItems="Center"
    >
        <items>
            <Image
                src="{deliveryCompany/logo}"
                height="50px"
                class="sapUiTinyMarginEnd"
            />
            <Text
                text="{deliveryCompany/name}"
                class="sapUiTinyMarginBegin"
            />
        </items>
    </FlexBox>
</core:FragmentDefinition>

<mvc:View
    controllerName="com.sap.internal.digitallab.packagehandling.app.pickuppackage.controller.Overview"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        showHeader="false"
    >
        <content>
            <!-- Picture -->
            <VBox
                alignItems="Center"
                class="sapUiLargeMarginBegin sapUiLargeMarginEnd"
            >
                <Image
                    src="{view>/imagePath}"
                    width="70%"
                />
            </VBox>

            <VBox alignItems="Center">
                <Title
                    id="idWelcomeTitle"
                    text="Welcome here, {usr>/uname}!"
                    level="H1"
                    class="bigger"
                />
            </VBox>

            <VBox
                alignItems="Center"
                class="sapUiSmallMargin"
            >
                <Text
                    visible="{ path: '$count', targetType: 'any', formatter: '.gt0' }"
                    id="idOkText"
                    text="You have the following packages:"
                    class=""
                />
                <Text
                    id="idNoText"
                    visible="{ path: '$count', targetType: 'any', formatter: '.eq0' }"
                    text="You have {$count} package. Come back later."
                />
            </VBox>

            <Panel
                id="idListPanel"
                class="sapUiMediumMargin"
                width="auto"
                visible="{ path: '$count', targetType: 'any', formatter: '.gt0' }"
            >
                <!-- Package List -->
                <List
                    id="idPackList"
                    binding="/Package"
                    mode="MultiSelect"
                    selectionChange="onSelectionChange"
                    items="{
                        path : '/Package',
                        parameters : {
                            $count : true
                        }
                    }"
                    visible="{ path: '/Package/$count', targetType: 'any', formatter: '.gt0' }"
                >
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Packages({/Package/$count})" />
                            <ToolbarSpacer />
                            <CheckBox
                                text="Toggle All"
                                select="onBoxClicked"
                            />
                        </Toolbar>
                    </headerToolbar>
                    <items>
                        <StandardListItem
                            icon="{ path: 'type/code', targetType: 'any', formatter: '.icon' }"
                            title="{type/name} ({deliveryCompany/name})"
                            description="Registered At: {comfirmationTime}"
                        />
                    </items>
                </List>
            </Panel>
        </content>
        <footer>
            <OverflowToolbar class="sapUiSmallMargin round">
                <ToolbarSpacer />
                <Button
                    activeIcon=""
                    press=".onPickupButtonPress"
                    text="Pickup"
                    type="Emphasized"
                    width=""
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
